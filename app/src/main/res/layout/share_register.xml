<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/fragment_share_register"
    android:layout_height="match_parent">

    
    <EditText
        android:id="@+id/et_register_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:includeFontPadding="true"
        android:paddingTop="5dp"
        android:background="#00000000"
        android:layout_marginTop="25dp"
        android:layout_marginRight="130dp"
        android:layout_toRightOf="@+id/iv_register_name"
        />

    <ImageView
        android:id="@+id/iv_register_name"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/ic_home"
        android:layout_alignBottom="@+id/et_register_name"
        android:layout_alignParentLeft="true"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/et_register_name"
        android:layout_below="@+id/et_register_name"
        android:background="@color/light_grey"/>

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Email id"
        android:includeFontPadding="true"
        android:password="true"
        android:background="#00000000"
        android:paddingTop="5dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/et_register_name"
        android:layout_marginRight="130dp"
        android:layout_toRightOf="@+id/iv_register_password"
        />

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/et_register_password"
        android:layout_below="@+id/et_register_password"
        android:background="#c0c0c0"/>
    <ImageView
        android:id="@+id/iv_register_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/ic_home"
        android:layout_alignBottom="@+id/et_register_password"
        android:layout_alignParentLeft="true"
        />

    <EditText
        android:id="@+id/et_register_number"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:phoneNumber="true"
        android:paddingTop="5dp"
        android:hint="Mobile Number"
        android:background="#00000000"
        android:layout_marginTop="25dp"
        android:layout_marginRight="130dp"
        android:layout_below="@+id/et_register_password"
        android:layout_toRightOf="@+id/iv_register_number"
        />

    <ImageView
        android:id="@+id/iv_register_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/ic_home"
        android:layout_alignBottom="@+id/et_register_number"
        android:layout_alignParentLeft="true"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/et_register_number"
        android:layout_below="@+id/et_register_number"
        android:background="#c0c0c0"
        android:id="@+id/view" />


    <RadioGroup android:layout_height="wrap_content" android:id="@+id/gender_group"
        android:layout_width="match_parent"
        android:layout_below="@+id/et_register_number"
        android:layout_alignLeft="@id/et_register_number"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/rb_register_male"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/rb_register_female"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/rb_register_male"
            android:checked="false" />
    </RadioGroup>

<Button
    android:id="@+id/btn_register_continue"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="@color/pale_magenta"
    android:text="SUBMIT"/>
</RelativeLayout>