<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:hint="Email id"
        android:paddingTop="5dp"
        android:background="#00000000"
        android:layout_marginTop="34dp"
        android:layout_marginRight="130dp"
        android:layout_toRightOf="@+id/iv_login_name"
        android:text="name"/>

    <ImageView
        android:id="@+id/iv_login_name"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/ic_home"
        android:layout_alignBottom="@+id/et_login_name"
        android:layout_alignParentLeft="true"
        />
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/et_login_name"
        android:layout_below="@+id/et_login_name"
        android:background="#c0c0c0"/>

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="true"
        android:background="#00000000"
        android:hint="Password"
        android:paddingTop="5dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/et_login_name"
        android:layout_marginRight="130dp"
        android:layout_toRightOf="@+id/iv_login_password"
        />

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/et_login_password"
        android:layout_below="@+id/et_login_password"
        android:background="#c0c0c0"/>
    <ImageView
        android:id="@+id/iv_login_password"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="21dp"
        android:src="@drawable/ic_home"
        android:layout_alignBottom="@+id/et_login_password"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pale_magenta"
        android:text="SUBMIT"/>
</RelativeLayout>