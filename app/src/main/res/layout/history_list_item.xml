<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <com.sharesmile.share.views.MLTextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brownish_grey"
            android:textSize="12sp"
            tools:text="6th March" />

        <com.sharesmile.share.views.MLTextView
            android:id="@+id/cause_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/greyish_brown_two"
            android:textSize="16sp"
            tools:text="Sponsor a Child, Foster a Future and something" />

        <com.sharesmile.share.views.MRTextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/greyish_brown_two"
            android:textSize="16sp"
            tools:text="5 kms" />
    </LinearLayout>


</android.support.v7.widget.CardView>