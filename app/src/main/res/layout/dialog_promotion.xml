<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:paddingBottom="24dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/image_run"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/light_grey"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cause_image_placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp">

        <com.sharesmile.share.views.MRTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:text="Sponser a Child, Foster a Future! "
            android:textColor="@color/greyish_brown_two"
            android:textSize="18sp" />

        <com.sharesmile.share.views.MRTextView
            android:id="@+id/sponser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="by Shwas Foundation"
            android:textColor="@color/black_two"
            android:textSize="12sp" />

        <com.sharesmile.share.views.MLTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sponser"
            android:text="Shwas is an effort started by a group of volunteers to educate the underprivileged kids of Gulbai Tekra, Ahmedabad since year 2009."
            android:textColor="@color/greyish_brown_two"
            android:textSize="14sp" />

    </RelativeLayout>

    <com.sharesmile.share.views.MRButton
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/light_gold"
        android:text="Share"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14dp" />
</LinearLayout>

