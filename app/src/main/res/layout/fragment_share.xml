<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:id="@+id/tv_share_screen_impact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:text="IMPACT"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_share_screen_ruppee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_share_screen_impact"
            android:layout_centerHorizontal="true"
            android:text="120 Rs"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_screen_distance"
            android:layout_width="18dp"
            android:layout_height="23.5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_share_screen_ruppee"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/timer" />

        <TextView
            android:id="@+id/tv_share_screen_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_screen_distance"
            android:layout_marginLeft="50.5dp"
            android:layout_marginTop="14.5dp"
            android:text="12 Kms"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_screen_time"
            android:layout_width="18dp"
            android:layout_height="23.5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_share_screen_ruppee"
            android:layout_marginRight="70.8dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/timer"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_share_screen_distance"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img_screen_time"
            android:layout_marginRight="35dp"
            android:text="1hr 2mins"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_share_screen_share_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="21.8dp"
            android:text="SHARE A FACEBOOK MESSAGE "
            android:textSize="12sp" />

        <EditText
            android:id="@+id/tv_share_screen_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_share_screen_share_fb"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="14dp"
            android:background="#00000000"
            android:textColor="@color/MontserratRegular"
            android:textSize="12.5sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_share_screen_description"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="30dp"
            android:background="#c0c0c0" />

        <ImageView
            android:id="@+id/img_share_screen_facebook"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_below="@id/tv_share_screen_description"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/img_share_screen_twitter"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_below="@id/tv_share_screen_description"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/img_share_screen_facebook"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/img_share_screen_whatsapp"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_below="@id/tv_share_screen_description"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/img_share_screen_twitter"
            android:src="@drawable/whatsapp" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_below="@id/tv_share_screen_description"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/img_share_screen_whatsapp"
            android:src="@drawable/google_plus" />

        <TextView
            android:id="@+id/tv_share_screen_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_share_screen_facebook"
            android:layout_marginLeft="30dp"
            android:paddingTop="11dp"
            android:text="@string/facebook" />

        <TextView
            android:id="@+id/tv_share_screen_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_share_screen_facebook"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@+id/tv_share_screen_facebook"
            android:paddingTop="11dp"
            android:text="@string/twitter" />

        <TextView
            android:id="@+id/tv_share_screen_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_share_screen_facebook"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@+id/tv_share_screen_twitter"
            android:paddingTop="11dp"
            android:text="@string/whatsapp" />

        <TextView
            android:id="@+id/tv_share_screen_google_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_share_screen_facebook"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@+id/tv_share_screen_whatsapp"
            android:paddingTop="11dp"
            android:text="@string/google_plus" />

        />

        <Button
            android:id="@+id/btn_share_screen"
            android:layout_width="295dp"
            android:layout_height="43.2dp"
            android:layout_below="@id/tv_share_screen_facebook"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corner"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_share_screen_skip_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_share_screen"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:text="@string/share_skip"
            android:textColor="@color/MontserratRegular" />

        <Button
            android:id="@+id/btn_share_screen_skip_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_share_screen_skip_share"
            android:layout_below="@id/btn_share_screen"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tv_share_screen_skip_share"
            android:background="@android:color/transparent"
            android:text="SKIP"
            android:textColor="@color/black" />
    </RelativeLayout>


</LinearLayout>