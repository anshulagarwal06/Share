<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/price_trend_card"
    style="@style/listBaseCardStyle"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/hope_girl"
            android:id="@+id/iv_event_image"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="@dimen/event_card_image_height" />

        <LinearLayout
            android:id="@+id/ll_event_card_desc"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/iv_event_image"
            android:layout_height="@dimen/event_card_container_height">

            <LinearLayout
                android:id="@+id/ll_event_card_date"
                android:orientation="vertical"
                android:layout_width="@dimen/event_card_tv_size"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:text="15"
                    android:gravity="bottom|center_horizontal"
                    android:id="@+id/tv_event_card_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/event_card_date_size"/>

                <TextView
                    android:text="OCT"
                    android:gravity="center"
                    android:id="@+id/tv_event_card_month"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/pale_magenta"
                    android:textSize="@dimen/event_card_month_size"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_card_titles"
                android:layout_marginStart="@dimen/event_card_ll_marginStart"
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_marginTop="@dimen/event_card_ll_marginTop"
                    android:text="Hirandani Powai Run"
                    android:id="@+id/tv_event_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/event_card_name_size" />

                <TextView
                    android:text="Hiranandani Gardens, Mumbai"
                    android:id="@+id/tv_event_card_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/event_card_ad_size"
                    android:layout_marginTop="@dimen/event_card_tv_marginTop"/>

                <TextView
                    android:text="By Nike"
                    android:id="@+id/tv_event_card_organiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/event_card_tv_marginTop"
                    android:textSize="@dimen/event_card_by_size"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_card_distance"
                android:orientation="vertical"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:layout_gravity="center">


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
