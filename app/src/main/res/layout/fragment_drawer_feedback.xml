<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Feedback"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@color/grey"
        android:textColor="@color/MontserratLight"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_feedback_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="Enter your e-mail id"
            android:layout_marginTop="36dp"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/et_feedback_email"
            android:layout_below="@+id/et_feedback_email"
            android:background="#c0c0c0"/>

        <EditText
            android:id="@+id/et_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_feedback_email"
            android:layout_alignLeft="@id/et_feedback_email"
            android:layout_marginTop="26dp"
            android:hint="Type your Feedback"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            />

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/et_feedback_email"
            android:layout_below="@+id/et_feedback_text"
            android:background="#c0c0c0"/>
    </RelativeLayout>

</LinearLayout>